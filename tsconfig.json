{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./client/**/*.ts",
    "./server/**/*.tsx",
    "./client/**/*.js",
    "./server/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}